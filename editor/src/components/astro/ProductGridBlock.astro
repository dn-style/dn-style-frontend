---
interface Props {
  columns?: number;
  title?: string;
}

const {
  columns = 4,
  title = 'Productos Destacados'
} = Astro.props;
---

<div class="py-12 max-w-7xl mx-auto px-4">
  <h2 class="text-2xl font-bold mb-8 text-gray-900 uppercase tracking-tight">{title}</h2>
  <div class={`grid grid-cols-1 md:grid-cols-${columns} gap-6`}>
    {[1, 2, 3, 4].map((i) => (
      <div class="bg-gray-50 rounded-3xl p-6 aspect-[4/5] flex flex-col justify-end border border-gray-100">
        <div class="w-full h-full bg-gray-200 rounded-2xl mb-4 animate-pulse uppercase flex items-center justify-center text-[10px] text-gray-400 font-bold">
            Product Image {i}
        </div>
        <div class="h-4 w-2/3 bg-gray-200 rounded mb-2" />
        <div class="h-4 w-1/3 bg-gray-300 rounded" />
      </div>
    ))}
  </div>
</div>
