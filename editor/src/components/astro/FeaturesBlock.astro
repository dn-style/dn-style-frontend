---
interface Props {
  title?: string;
  itemCount?: number;
  backgroundColor?: string;
}

const {
  title = 'Nuestras Caracter√≠sticas',
  itemCount = 3,
  backgroundColor = '#f8fafc'
} = Astro.props;
---

<div
  class="py-16 px-4"
  style={{ backgroundColor }}
>
  <div class="max-w-7xl mx-auto">
    <h2 class="text-3xl font-bold text-center mb-12 text-gray-900">{title}</h2>
    <div class={`grid grid-cols-1 md:grid-cols-${itemCount > 4 ? 4 : itemCount} gap-8`}>
      {Array.from({ length: itemCount }).map((_, i) => (
        <div class="flex flex-col items-center text-center p-6 bg-white rounded-2xl shadow-sm border border-gray-100">
          <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center text-blue-600 mb-4">
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">Feature {i + 1}</h3>
          <p class="text-gray-500 text-sm">Description for this amazing feature goes here.</p>
        </div>
      ))}
    </div>
  </div>
</div>
