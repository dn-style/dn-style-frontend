---
interface Props {
  title?: string;
  subtitle?: string;
  buttonText?: string;
  backgroundColor?: string;
}

const {
  title = 'Nueva Colección 2026',
  subtitle = 'Descubre lo último en tecnología y diseño premium para tu estilo de vida.',
  buttonText = 'Explorar Tienda',
  backgroundColor = '#ffffff'
} = Astro.props;
---

<div
  class="py-20 px-10 text-center transition-all"
  style={{ backgroundColor }}
>
  <h1 class="text-5xl font-black mb-4 tracking-tight text-gray-900">{title}</h1>
  <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">{subtitle}</p>
  <button class="bg-gray-900 text-white px-8 py-4 rounded-2xl font-bold uppercase text-xs tracking-widest">
    {buttonText}
  </button>
</div>
