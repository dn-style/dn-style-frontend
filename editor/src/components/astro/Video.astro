---
interface Props {
  videoId?: string;
  width?: string;
  borderRadius?: number;
  marginTop?: number;
  marginBottom?: number;
  marginLeft?: number;
  marginRight?: number;
  shadow?: string;
}

const {
  videoId = 'M7lc1UVf-VE',
  width = '100%',
  borderRadius = 12,
  marginTop = 0,
  marginBottom = 0,
  marginLeft = 0,
  marginRight = 0,
  shadow = 'none',
} = Astro.props;

const style = {
  width,
  borderRadius: `${borderRadius}px`,
  marginTop: `${marginTop}px`,
  marginBottom: `${marginBottom}px`,
  marginLeft: `${marginLeft}px`,
  marginRight: `${marginRight}px`,
  boxShadow: shadow === 'none' ? 'none' : shadow,
};
---

<div class="overflow-hidden transition-all bg-gray-900 aspect-video" style={style}>
  <iframe
    width="100%"
    height="100%"
    src={`https://www.youtube.com/embed/${videoId}`}
    title="YouTube video player"
    frame-border="0"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
    allow-fullscreen
  ></iframe>
</div>
